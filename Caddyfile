    # -----------------------------
    # Django static + media
    # -----------------------------
    reverse_proxy /static/* 127.0.0.1:8000
    reverse_proxy /media/*  127.0.0.1:8000

    # -----------------------------
    # Everything else â†’ Django
    # -----------------------------
    reverse_proxy 127.0.0.1:8000
}
