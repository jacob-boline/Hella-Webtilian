{
  "name": "hella-webtilian",
  "version": "1.0.0",
  "description": "Hella Reptilian band site / Django SPA",
  "private": true,
  "scripts": {
    "django:run": "uv run manage.py runserver 127.0.0.1:8000",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "caddy:run": "caddy run --config Caddyfile --adapter caddyfile",
    "dev": "concurrently -k -n DJANGO,VITE -c magenta,cyan \"npm:django:run\" \"npm:vite:dev\"",
    "dev:tunnel": "concurrently -k -n DJANGO,VITE,CADDY -c magenta,cyan,green \"npm:django:run\" \"npm:vite:dev\" \"npm:caddy:run\"",
    "build": "npm run vite:build",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "stylelint": "^17.0.0",
    "stylelint-config-alphabetical-order": "^1.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-use-nesting": "^6.0.0",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "feather-icons": "^4.29.2",
    "htmx.org": "^2.0.8"
  }
}
